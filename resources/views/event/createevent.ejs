      <div class="mt-10">
        <form action="/eventpost" method="POST" class="flex flex-col">
          <div class="my-1 py-1 rounded bg-transperent">
              <label class="block text-black text-2xl font-bold mb-2">
                Event Title
              </label>
              <input name="title" class="px-3 py-1 bg-red-100 rounded w-full text-gray-700 border-b-4 border-red-300 hover:bg-red-200 focus:outline-none focus:border-red-500 focus:bg-red-200 transition duration-200" type="text" placeholder="Event Title">
          </div>
          <div class="my-1 py-1 rounded bg-transperent">
              <label class="block text-black text-2xl font-bold mb-2">
                Eent Description
              </label>
              <input name="description" class="px-3 py-1 bg-red-100 rounded w-full text-gray-700 border-b-4 border-red-300 hover:bg-red-200 focus:outline-none focus:border-red-500 focus:bg-red-200 transition duration-200" type="email" placeholder="Event-Description">
          </div>
          <div class="my-1 py-1 rounded bg-transperent flex flex-wrap">
            <div class="w-full md:w-1/3 mb-6 md:mb-0">
              <label class="block text-black text-2xl font-bold mb-2">
                Location
              </label>
              <input name="location" class="px-3 py-1 bg-red-100 rounded w-full text-gray-700 border-b-4 border-red-300 hover:bg-red-200 focus:outline-none focus:border-red-500 focus:bg-red-200 transition duration-200" type="text" placeholder="Location">
            </div>
            <div class="w-full md:w-1/3 px-3 mb-6 md:mb-0">
              <label class="block text-black text-2xl font-bold mb-2">
                Time
              </label>
              <input name="time" class="px-3 py-1 bg-red-100 rounded w-full text-gray-700 border-b-4 border-red-300 hover:bg-red-200 focus:outline-none focus:border-red-500 focus:bg-red-200 transition duration-200" type="text" placeholder="Time">
            </div>
            <div class="w-full md:w-1/3 mb-6 md:mb-0">
              <label class="block text-black text-2xl font-bold mb-2">
                Price
              </label>
              <input name="price" class="px-3 py-1 bg-red-100 rounded w-full text-gray-700 border-b-4 border-red-300 hover:bg-red-200 focus:outline-none focus:border-red-500 focus:bg-red-200 transition duration-200" type="text" placeholder="Price">
            </div>
          </div>
          <div class="mb-1 pt-1 rounded bg-transperent">
            <div class="flex justify-end my-4">
              <button class="w-48 bg-red-600 text-white text-xl font-bold px-4 py-2 rounded-full shadow-lg hover:bg-red-500 hover:shadow-xl transition duration-200" type="submit">
