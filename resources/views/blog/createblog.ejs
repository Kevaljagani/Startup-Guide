<section class="flex justify-center text-4xl mt-10"><h1>Create Blog</h1></section>
<section class="flex justify-center pt-24">
<form action="/createblog" method="POST" class="w-full max-w-lg content-center">
  <div class="flex flex-wrap -mx-3 mb-6">
    <div class="w-full px-3">
      <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2">
        Blog Title
      </label>
      <input name="title" class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-500 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white" type="text" placeholder="Event Title">
 
    </div>
  </div>
  <div class="flex flex-wrap -mx-3 mb-6">
    <div class="w-full px-3">
      <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2">
        Blog Description
      </label>
      <input name="description" class="h-100% appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white focus:border-gray-500" type="text" placeholder="Blog-Description">
    </div>
  </div>
  <div class="flex flex-wrap -mx-3 mb-2">
    <div class="w-full md:w-1/3 px-3 mb-6 md:mb-0">
      <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2">
        Technology 
      </label>
      <input name="technology" class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500" type="text" placeholder="#javascript">
    </div>
    

          <button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-10 rounded-full mt-12" type="submit">
  			Publish Blog
			</button>
      <button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-10 rounded-full mt-12">
       <a href="/userdashboard">List_all_Blogs</a>
      </button>

    </div>

  </div>

</form>